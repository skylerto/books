<div class="container">
  <div class="row">
    <h1>Cart</h1>
  </div>
  <div class="row">
    <% if @cart_books.size > 0 %>
      <% @cart_books.each do |book| %>
        <%= link_to book do%>
        <div class="col-md-4">
          <div class="book">
            <div class="book_title">
              <h3><%= book.title %></h3>
            </div>
            <div class="book_author"><strong>Author</strong>: <%= book.author %></div>
            <div class="book_price"><strong>Price</strong>: $<%= book.price %></div>
            <div class="book_category"><strong>Category</strong>: <%= book.category %></div>


      <% end %>
            <!-- ADMIN LINKS -->
            <%= link_to 'Edit', edit_book_path(book) %>
            <%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %>

            <%=link_to "Remove From Cart", remove_from_cart_path(book), :method => :put %>

            <!-- END ADMIN LINKS -->
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="">
        <h4>Cart is Empty</h4>
      </div>
    <% end %>

      </div>
</div>
